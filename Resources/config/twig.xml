<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="twig.extension.sonatra_gluon.property_path.class">Sonatra\Component\Gluon\Twig\Extension\PropertyPathExtension</parameter>
        <parameter key="twig.extension.sonatra_gluon.stylesheet_google_fonts.class">Sonatra\Component\Gluon\Twig\Extension\GoogleFontsExtension</parameter>
    </parameters>

    <services>
        <service id="twig.extension.sonatra_gluon.property_path" class="%twig.extension.sonatra_gluon.property_path.class%" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="property_accessor" />
        </service>

        <service id="twig.extension.sonatra_gluon.stylesheet_google_fonts" class="%twig.extension.sonatra_gluon.stylesheet_google_fonts.class%" public="false">
            <tag name="twig.extension" />
            <argument>%sonatra_gluon.template.google_fonts%</argument>
        </service>
    </services>
</container>
